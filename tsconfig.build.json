{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "declarationDir": "dist/types",

    "jsx": "react-jsx",
    "types": ["node"],

    "paths": {
      "intor": ["./export/index.ts"],
      "intor/*": ["./export/*"]

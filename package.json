{
  "name": "intor",
  "version": "2.2.1",
  "description": "A modular and extensible i18n core designed for TypeScript and JavaScript projects. Intor enables custom translation logic with support for both frontend and backend environments, featuring runtime configuration, caching, adapters, and message loaders.",
  "author": "Yiming Liao",
  "license": "MIT",
  "homepage": "https://github.com/yiming-liao/intor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yiming-liao/intor"
  },
  "bugs": {
    "url": "https://github.com/yiming-liao/intor/issues"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "typescript",
    "node",
    "nextjs",
    "react",
    "translator",
    "i18n core",
    "custom messages"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "require": "./dist/config/index.cjs"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.cjs"
    },
    "./next/middleware": {
      "types": "./dist/next/middleware/index.d.ts",
      "import": "./dist/next/middleware/index.js",
      "require": "./dist/next/middleware/index.cjs"
    },
    "./next/server": {
      "types": "./dist/next/server/index.d.ts",
      "import": "./dist/next/server/index.js",
      "require": "./dist/next/server/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "yarn build",
    "type": "tsc --noEmit",
    "lint": "eslint",
    "lint:debug": "eslint --debug",
    "test": "vitest",
    "knip": "knip --config .config/knip.config.ts"
  },
  "dependencies": {
    "intor-translator": "^1.1.2",
    "keyv": "^5.5.3",
    "lodash.merge": "^4.6.2",
    "logry": "^2.0.1",
    "p-limit": "^6.2.0"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@vitest/coverage-v8": "4.0.9",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "knip": "^5.69.1",
    "next": "16",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^4.0.9"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  }
}

{
  "name": "intor",
  "version": "2.2.15",
  "description": "A modular and extensible i18n core designed for TypeScript and JavaScript projects. Intor enables custom translation logic with support for both frontend and backend environments, featuring runtime configuration, caching, adapters, and message loaders.",
  "author": "Yiming Liao",
  "license": "MIT",
  "homepage": "https://github.com/yiming-liao/intor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yiming-liao/intor"
  },
  "bugs": {
    "url": "https://github.com/yiming-liao/intor/issues"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "typescript",
    "node",
    "nextjs",
    "react",
    "translator",
    "i18n core",
    "custom messages"
  ],
  "exports": {
    ".": {
      "types": "./dist/exports/index.d.ts",
      "import": "./dist/exports/index.js"
    },
    "./config": {
      "types": "./dist/exports/config/index.d.ts",
      "import": "./dist/exports/config/index.js"
    },
    "./server": {
      "types": "./dist/exports/server/index.d.ts",
      "import": "./dist/exports/server/index.js"
    },
    "./react": {
      "types": "./dist/exports/react/index.d.ts",
      "import": "./dist/exports/react/index.js"
    },
    "./next": {
      "types": "./dist/exports/next/index.d.ts",
      "import": "./dist/exports/next/index.js"
    },
    "./next/proxy": {
      "types": "./dist/exports/next/proxy/index.d.ts",
      "import": "./dist/exports/next/proxy/index.js"
    },
    "./next/middleware": {
      "types": "./dist/exports/next/proxy/index.d.ts",
      "import": "./dist/exports/next/proxy/index.js"
    },
    "./next/server": {
      "types": "./dist/exports/next/server/index.d.ts",
      "import": "./dist/exports/next/server/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "type": "tsc --noEmit",
    "lint": "eslint",
    "lint:debug": "eslint --debug",
    "test": "vitest",
    "knip": "knip --config .config/knip.config.ts",
    "clean": "rm -rf dist",
    "build:core": "rollup -c .config/rollup/core.js",
    "build:react": "rollup -c .config/rollup/react.js",
    "build:next": "rollup -c .config/rollup/next.js",
    "build:dts": "rollup -c .config/rollup/dts.js",
    "build": "yarn clean && yarn build:core && yarn build:react && yarn build:next &&  yarn tsc -p tsconfig.build.json && yarn tsc-alias tsconfig.build.json --outDir dist",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "intor-translator": "^1.1.5",
    "keyv": "^5.5.3",
    "lodash.merge": "^4.6.2",
    "logry": "^2.0.1",
    "p-limit": "^6.2.0"
  },
  "devDependencies": {
    "@intor/cli": "^0.1.2",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "4.0.13",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^27.2.0",
    "knip": "^5.69.1",
    "next": "^16.0.3",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "rollup": "^4.53.3",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "^4.0.9"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  }
}

{
  "name": "intor",
  "version": "2.3.3",
  "description": "A modular and extensible i18n core designed for TypeScript and JavaScript projects. Intor enables custom translation logic with support for both frontend and backend environments, featuring runtime configuration, caching, adapters, and message loaders.",
  "author": "Yiming Liao",
  "homepage": "https://github.com/yiming-liao/intor#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yiming-liao/intor"
  },
  "bugs": {
    "url": "https://github.com/yiming-liao/intor/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/yiming-liao"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "typescript",
    "node",
    "nextjs",
    "react",
    "translator",
    "i18n core",
    "custom messages"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/export/index.d.ts",
      "import": "./dist/export/index.js"
    },
    "./config": {
      "types": "./dist/export/config/index.d.ts",
      "import": "./dist/export/config/index.js"
    },
    "./server": {
      "types": "./dist/export/server/index.d.ts",
      "import": "./dist/export/server/index.js"
    },
    "./react": {
      "types": "./dist/export/react/index.d.ts",
      "import": "./dist/export/react/index.js"
    },
    "./next": {
      "types": "./dist/export/next/index.d.ts",
      "import": "./dist/export/next/index.js"
    },
    "./next/proxy": {
      "types": "./dist/export/next/proxy/index.d.ts",
      "import": "./dist/export/next/proxy/index.js"
    },
    "./next/middleware": {
      "types": "./dist/export/next/proxy/index.d.ts",
      "import": "./dist/export/next/proxy/index.js"
    },
    "./next/server": {
      "types": "./dist/export/next/server/index.d.ts",
      "import": "./dist/export/next/server/index.js"
    }
  },
  "main": "./dist/export/index.js",
  "module": "./dist/export/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "type": "tsc --noEmit",
    "lint": "eslint",
    "lint:debug": "eslint --debug",
    "test": "vitest",
    "knip": "knip --config .config/knip.config.ts",
    "clean": "rm -rf dist",
    "build:core": "rollup -c .config/rollup/core.js",
    "build:react": "rollup -c .config/rollup/react.js",
    "build:next": "rollup -c .config/rollup/next.js",
    "build": "yarn clean && yarn build:core && yarn build:react && yarn build:next &&  yarn tsc -p tsconfig.build.json && yarn tsc-alias tsconfig.build.json --outDir dist",
    "prepublishOnly": "yarn build",
    "examples:html": "vite --config examples/html/vite.config.ts"
  },
  "dependencies": {
    "intor-translator": "^1.2.3",
    "keyv": "5.5.5",
    "logry": "2.1.5",
    "p-limit": "7.2.0"
  },
  "devDependencies": {
    "@intor/cli": "0.1.2",
    "@rollup/plugin-typescript": "12.3.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "24.10.1",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-unicorn": "62.0.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "jsdom": "27.3.0",
    "knip": "5.69.1",
    "next": "16.0.3",
    "prettier": "3.6.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.1",
    "rollup": "4.53.3",
    "rollup-plugin-preserve-directives": "0.4.0",
    "tsc-alias": "1.8.16",
    "typescript": "5.8.3",
    "typescript-eslint": "8.32.1",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "4.0.16"
  }
}

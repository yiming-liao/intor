{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ES2020",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    // "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "incremental": false,
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    //  "__test__",
    // "**/*.test.ts"
    "coverage"
  ]
}

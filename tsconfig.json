{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "examples",
    "**/**test-d.ts",
    "bench"
  ]
}
